{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "Radar chart with area fill for multiple years",
    "width": 600,
    "height": 420,
    "padding": {"top": 50, "left": 100, "right": 240, "bottom": 20},
    "autosize": {"type": "none", "contains": "padding"},
    "signals": [
      {"name": "radius", "update": "width/1.5"}  
    ],
    "data": [
      {
        "name": "source",
        "url": "https://raw.githubusercontent.com/znxuan/data_viz_vegalite/refs/heads/main/product_category_worldwide.csv",
        "format": {"type": "csv"},
        "transform": [
          {"type": "filter", "expr": "datum.Category !== 'Total'"},
          {"type": "fold", "fields": ["2023", "2011"], "as": ["year", "value"]},
          {"type": "formula", "as": "key", "expr": "datum.Category"}
        ]
      },
      {
        "name": "keys",
        "source": "source",
        "transform": [
          {
            "type": "aggregate",
            "groupby": ["key"]
          }
        ]
      }
    ],
    "scales": [
      {
        "name": "angular",
        "type": "point",
        "range": {"signal": "[-PI, PI]"},
        "padding": 0.5,
        "domain": {"data": "source", "field": "key"}
      },
      {
        "name": "radial",
        "type": "linear",
        "range": {"signal": "[0, radius]"},
        "zero": true,
        "nice": false,
        "domain": {"data": "source", "field": "value"},
        "domainMin": 0
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": ["2011", "2023"],
        "range": ["#9ecae1", "#e377c2"]
      }
    ],
    "legends": [
      {
        "fill": "color",
        "title": "Year",
        "orient": "right",
        "titleFontSize": 14,
        "labelFontSize": 12,
        "symbolType": "circle"
      }
    ],
    "encode": {
      "enter": {
        "x": {"signal": "radius"},
        "y": {"signal": "radius"}
      }
    },
    "marks": [
      {
        "type": "group",
        "name": "year",
        "zindex": 1,
        "from": {
          "facet": {"data": "source", "name": "facet", "groupby": ["year"]}
        },
        "marks": [
          {
            "type": "line",
            "name": "category-line",
            "from": {"data": "facet"},
            "encode": {
              "enter": {
                "interpolate": {"value": "linear-closed"},
                "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
                "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
                "fill": {"scale": "color", "field": "year"},  
                "fillOpacity": {"value": 0.05}, 
                "stroke": {"scale": "color", "field": "year"},
                "strokeWidth": {"value": 2}
              }
            }
          },
          {
            "type": "symbol",
            "name": "category-points",
            "from": {"data": "facet"},
            "encode": {
              "enter": {
                "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
                "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
                "fill": {"scale": "color", "field": "year"},
                "size": {"value": 50},
                "tooltip": {
                  "signal": "{'Category': datum.key, 'Value': datum.value, 'Year': datum.year}"
                }
              }
            }
          },
          {
            "type": "text",
            "name": "category-values",
            "from": {"data": "facet"},
            "encode": {
              "enter": {
                "x": {
                  "signal": "datum.key === 'Skincare' ? (scale('radial', datum.value) * cos(scale('angular', datum.key))) + 20 : datum.key === 'Haircare' ? (scale('radial', datum.value) * cos(scale('angular', datum.key))) + 25 : (scale('radial', datum.value) * cos(scale('angular', datum.key))) + (cos(scale('angular', datum.key)) * 35)"
                },
                "y": {
                  "signal": "datum.key === 'Skincare' ? (scale('radial', datum.value) * sin(scale('angular', datum.key))) - 10 : datum.key === 'Haircare' ? (scale('radial', datum.value) * sin(scale('angular', datum.key))) - 20 : (scale('radial', datum.value) * sin(scale('angular', datum.key))) + (sin(scale('angular', datum.key)) * 15)"
                },
                "text": {"field": "value"},  
                "align": {"value": "center"},
                "baseline": {"value": "middle"},
                "fill": {"value": "black"}, 
                "fontSize": {"value": 10}
              }
            }
          }
        ]
      },
      {
        "type": "rule",
        "name": "radial-grid",
        "from": {"data": "keys"},
        "zindex": 0,
        "encode": {
          "enter": {
            "x": {"value": 0},
            "y": {"value": 0},
            "x2": {"signal": "radius * cos(scale('angular', datum.key))"},
            "y2": {"signal": "radius * sin(scale('angular', datum.key))"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      },
      {
        "type": "text",
        "name": "key-label",
        "from": {"data": "keys"},
        "zindex": 1,
        "encode": {
          "enter": {
            "x": {"signal": "(radius + 20) * cos(scale('angular', datum.key))"},
            "y": {"signal": "(radius + 20) * sin(scale('angular', datum.key))"},
            "text": {"field": "key"},
            "align": [
              {
                "test": "abs(scale('angular', datum.key)) > PI / 2",
                "value": "right"
              },
              {
                "value": "left"
              }
            ],
            "baseline": [
              {
                "test": "scale('angular', datum.key) > 0", "value": "top"
              },
              {
                "test": "scale('angular', datum.key) == 0", "value": "middle"
              },
              {
                "value": "bottom"
              }
            ],
            "fill": {"value": "black"},
            "fontWeight": {"value": "bold"}
          }
        }
      },
      {
        "type": "area",
        "name": "outer-line",
        "from": {"data": "radial-grid"},
        "encode": {
          "enter": {
            "interpolate": {"value": "linear-closed"},
            "x": {"field": "x2"},
            "y": {"field": "y2"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      }
    ]
  }
  