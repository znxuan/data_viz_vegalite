{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "title": {
      "text": "Revenue of each beauty categories",
      "align": "center"
      
    },
    "description": "Radar chart with area fill",
    "width": 350,
    "height": 350,
    "padding": 70,
    "autosize": {"type": "none", "contains": "padding"},
  
    "signals": [
      {"name": "radius", "update": "width / 2"},
      {
        "name": "selectedYear", 
        "value": 2020,
        "bind": {
          "input": "range", 
          "min": 2018, 
          "max": 2024, 
          "step": 1,
          "name": "Year: "
        }
      }
    ],
  
    "data": [
      {
        "name": "source",
        "url": "https://raw.githubusercontent.com/znxuan/data_viz_vegalite/refs/heads/main/revenue_segment_msia.csv",
        "format": {"type": "csv"},
        "transform": [
          {"type": "filter", "expr": "datum.Category !== 'Total'"},
          {"type": "formula", "as": "key", "expr": "datum.Category"},
          {"type": "formula", "as": "value", "expr": "datum[selectedYear]"},
          {"type": "formula", "as": "year", "expr": "selectedYear"}
        ]
      },
      {
        "name": "keys",
        "source": "source",
        "transform": [
          {
            "type": "aggregate",
            "groupby": ["key"]
          }
        ]
      }
    ],
  
    "scales": [
      {
        "name": "angular",
        "type": "point",
        "range": {"signal": "[-PI, PI]"},
        "padding": 0.5,
        "domain": {"data": "source", "field": "key"}
      },
      {
        "name": "radial",
        "type": "linear",
        "range": {"signal": "[0, radius]"},
        "zero": true,
        "nice": false,
        "domain": {"data": "source", "field": "value"},
        "domainMin": 0
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": [2018, 2019, 2020, 2021, 2022, 2023, 2024],
        "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd", "#8c564b", "#e377c2"]
      }
    ],
  
    "encode": {
      "enter": {
        "x": {"signal": "radius"},
        "y": {"signal": "radius"}
      }
    },
  
    "marks": [
      {
        "type": "group",
        "name": "year",
        "zindex": 1,
        "from": {
          "facet": {"data": "source", "name": "facet", "groupby": ["year"]}
        },
        "marks": [
          {
          "type": "line",
          "name": "category-area",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
              "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
              "fill": {"scale": "color", "field": "year"},  
              "fillOpacity": {"value": 0.5},  
              "stroke": {"scale": "color", "field": "year"},  
              "strokeWidth": {"value": 1}
      },
      "update": {
        "fill": {"scale": "color", "field": "year"}, 
        "fillOpacity": {"value": 1},  
        "stroke": {"scale": "color", "field": "year"}
      }
    }
  }
  ,
          {
            "type": "text",
            "name": "value-text",
            "from": {"data": "category-area"},
            "encode": {
              "enter": {
                "x": {"signal": "datum.x"},
                "y": {"signal": "datum.y"},
                "text": {"signal": "datum.datum.value"},
                "align": {"value": "center"},
                "baseline": {"value": "middle"},
                "fill": {"value": "black"}
              }
            }
          }
        ]
      },
      {
        "type": "rule",
        "name": "radial-grid",
        "from": {"data": "keys"},
        "zindex": 0,
        "encode": {
          "enter": {
            "x": {"value": 0},
            "y": {"value": 0},
            "x2": {"signal": "radius * cos(scale('angular', datum.key))"},
            "y2": {"signal": "radius * sin(scale('angular', datum.key))"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      },
      {
        "type": "text",
        "name": "key-label",
        "from": {"data": "keys"},
        "zindex": 1,
        "encode": {
          "enter": {
            "x": {"signal": "(radius + 5) * cos(scale('angular', datum.key))"},
            "y": {"signal": "(radius + 5) * sin(scale('angular', datum.key))"},
            "text": {"field": "key"},
            "align": [
              {
                "test": "abs(scale('angular', datum.key)) > PI / 2",
                "value": "right"
              },
              {
                "value": "left"
              }
            ],
            "baseline": [
              {
                "test": "scale('angular', datum.key) > 0", "value": "top"
              },
              {
                "test": "scale('angular', datum.key) == 0", "value": "middle"
              },
              {
                "value": "bottom"
              }
            ],
            "fill": {"value": "black"},
            "fontWeight": {"value": "bold"}
          }
        }
      },
      {
        "type": "line",
        "name": "outer-line",
        "from": {"data": "radial-grid"},
        "encode": {
          "enter": {
            "interpolate": {"value": "linear-closed"},
            "x": {"field": "x2"},
            "y": {"field": "y2"},
            "stroke": {"value": "lightgray"},
            "strokeWidth": {"value": 1}
          }
        }
      }
    ]
  }
  